{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ocm.software/open-component-model/bindings/go/configuration/generic/v1/spec/schemas/Config.json",
  "title": "Config",
  "description": "Config holds configuration entities loaded through a configuration file.",
  "type": "object",
  "properties": {
    "configurations": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/runtime.Raw"
      }
    },
    "type": {
      "$ref": "#/$defs/runtime.Type"
    }
  },
  "required": [
    "type",
    "configurations"
  ],
  "$defs": {
    "runtime.Raw": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "$id": "ocm.software/open-component-model/bindings/go/runtime/schemas/Raw.json",
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/$defs/runtime.Type"
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": true
    },
    "runtime.Type": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "$id": "ocm.software/open-component-model/bindings/go/runtime/schemas/Type.json",
      "type": "string",
      "pattern": "^([a-zA-Z0-9][a-zA-Z0-9.]*)(?:/(v[0-9]+(?:alpha[0-9]+|beta[0-9]+)?))?$"
    }
  }
}