{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ocm.software/open-component-model/bindings/go/configuration/generic/v1/spec/schemas/Config.json",
  "description": "Config holds configuration entities loaded through a configuration file.",
  "title": "Config",
  "type": "object",
  "properties": {
    "configurations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "pattern": "^([a-zA-Z0-9][a-zA-Z0-9.]*)(?:/(v[0-9]+(?:alpha[0-9]+|beta[0-9]+)?))?$"
          }
        },
        "additionalProperties": true,
        "required": [
          "type"
        ]
      }
    },
    "type": {
      "type": "string",
      "pattern": "^([a-zA-Z0-9][a-zA-Z0-9.]*)(?:/(v[0-9]+(?:alpha[0-9]+|beta[0-9]+)?))?$"
    }
  },
  "required": [
    "type",
    "configurations"
  ]
}